---
title: "Photos"
layout: base
pagination:
  data: collections.media
  reverse: true
  size: 50
eleventyNavigation:
  key: Photos
---
<div class="container">
    <h1>{{ title }}</h1>

<ul class="card-group">
    {% for item in pagination.items %}
        <li class="card-group__item grid-column-one-third">
          <div class="card">
            <img class="card__img" src="{{ item.data.images | first }}" width="200" loading="lazy"/>
            <div class="card__content">
              <div class="card__heading"><a href="{{ item.url }}">
              {% if item.data.caption %}
                {{ item.data.caption }}
              {% else %}
                {{ item.data.title }}
              {% endif %}
              </a>
              </div>
              <p class="card__description">{{ item.data.description }}</p>
            </div>
          </div>
        </li>
    {% endfor %}
</ul>
</div>