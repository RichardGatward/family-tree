---
layout: base
---
<article class="container">
<h1>{{ title }}</h1>
<p>{{ date | dateToFormat('yyyy') }}-{{ deathDate | dateToFormat('yyyy') }}<p>

<h2>Life facts</h2>
<dl class="summary-list">
    <div class="summary-list__row">
        <dt class="summary-list__key">Name</dt>
        <dd class="summary-list__value">{{ title }}</dd>
    </div>
    <div class="summary-list__row">
        <dt class="summary-list__key">Gender</dt>
        <dd class="summary-list__value">{{ gender }}</dd>
    </div>

    <div class="summary-list__row">
        <dt class="summary-list__key">Birth</dt>
        <dd class="summary-list__value">{{ date | dateToFormat('dd MMMM yyyy') }} {% if birthPlace %}<br> {{ birthPlace }}{% endif %}</dd>
    </div>
    
    {% if item.data.marriage.date %}
    <div class="summary-list__row">
        <dt class="summary-list__key">Marriage</dt>
        <dd class="summary-list__value">{{ marriage.date }} <br> {{ marriage.place }}</dd>
    </div>
    {% endif %}

    <div class="summary-list__row">
        <dt class="summary-list__key">Living status</dt>
        <dd class="summary-list__value">Living <br> {{ deathDate | dateToFormat('dd MMMM yyyy') }} {% if deathPlace %}<br> {{ deathPlace }}{% endif %}</dd>
    </div>
</dl>

<h2>Media</h2>

<ul>
    <li>
        <a href="">
            <div class="card">
                <div class="cardImg">
                    <img src="" alt="Photo" />
                </div>
                <div class="cardContent">
                    <p>Caption or filename</p>
                </div>
            </div>
        </a>
    </li>
    <li>
        <a href="">
